<%= form_tag({controller: "users", action: "signin"}, method: "post") do %>
  <h1>Entra</h1>
  <div class="errors">
    <%= @errors if @errors != '' %>
  </div>
  <input type="hidden" name="s" value="1" />
  <input id="user_nickname" placeholder="Nickname" type="text" name="nickname" />
  <input id="user_password" placeholder="Password" type="password" name="password" />
  <a class="switchSignup">Registrati subito</a>
  <input type="submit" name="commit" value="Entra" id="submit" />
<% end %>
