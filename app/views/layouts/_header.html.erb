<header>
	<% unless check_conn %>
	<section class="log" style="<%= "display:block;" if params.has_key?("r") || params.has_key?("l") || request.original_fullpath == "/signup" || request.original_fullpath == "/signin" %>">
		<a href="/" onclick="closex()">
			<%= image_tag("x_close.png", :alt => "X", :class => "x_close") %>
		</a>
		<div class="sign signup" style="<%= "display:none;" if params.has_key?("l") || request.original_fullpath == "/signin"%>">
			<%= render "users/formUp" %>
		</div>
		<div class="sign signin" style="<%= "display:block;" if params.has_key?("l") || request.original_fullpath == "/signin"%>">
			<%= render "users/formIn" %>
		</div>
	</section>
	<% end %>
	<section class="head">
		<h1 id="logo">
			<a href="/">
				<%= image_tag("logo_netcoding.svg", :alt => "logo") %>
			</a>
		</h1>
		<nav>
			<span class="expand_menu">
				<i class="fa fa-ellipsis-h" aria-hidden="true"></i>
			</span>
			<ul class="menu">
				<li>
					<%= link_to "Categorie", :controller => 'pages', :action => 'index' %>
				</li>
				<li>
					<%= link_to "Codice", :controller => 'pages', :action => 'index' %>
				</li>
				<% #logout %>
				<li>
					<%= link_to "Utenti", :controller => 'pages', :action => 'index' %>
				</li>
			</ul>
			<div class="r">
			<%= "<a class=\"butt_log\">Entra</a>".html_safe unless check_conn %>
			<%= form_tag({controller: "pages", action: "about"}, method: "get") do %>
  			<div class="input">
					<input type="text" name="q" placeholder="Cerca" />
				</div>
				<span class="sq"><i class="fa fa-search" aria-hidden="true"></i></span>
			<% end %>
			</div>
		</nav>
	</section>

</header>
