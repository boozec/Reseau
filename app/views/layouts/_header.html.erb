<header>
	<section class="log" style="<%= "display:block;" if params.has_key?("r")%>">
		<img src="assets/x_close.png" alt="X" class="x_close"/>
		<div class="sign signup">
			<%= render "users/formUp" %>
		</div>
		<div class="sign signin">
			<%= render "users/formIn" %>
		</div>
	</section>
	<section class="head">
		<h1 id="logo">
			<a href="/">
				<%= image_tag("logo.png", :alt => "logo") %>
			</a>
		</h1>
		<nav>
			<span class="expand_menu">
				<i class="fa fa-ellipsis-h" aria-hidden="true"></i>
			</span>
			<ul class="menu">
				<li>
					<%= link_to "Categorie", :controller => 'pages', :action => 'index' %>
				</li>
				<li>
					<%= link_to "Codice", :controller => 'pages', :action => 'index' %>
				</li>
				<li>
					<%= link_to "Utenti", :controller => 'pages', :action => 'index' %>
				</li>
			</ul>

			<div class="r">
			<a class="butt_log">Entra</a>
			<%= form_tag({controller: "pages", action: "about"}, method: "get") do %>
  			<div class="input">
					<input type="text" name="q" placeholder="Cerca" />
				</div>
				<span class="sq"><i class="fa fa-search" aria-hidden="true"></i></span>
			<% end %>
			</div>
		</nav>
	</section>

</header>
